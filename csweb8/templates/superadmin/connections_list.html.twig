{% extends 'base.html.twig' %}

{% block title %}Database Connections - {{ organization.organizationName }} - CSWeb Multi-Tenant Admin{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>
                <i class="fas fa-database"></i> Database Connections
            </h2>
            <p class="text-muted">
                Organization: <strong>{{ organization.organizationName }}</strong> ({{ organization.organizationCode }})
            </p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('superadmin_connections_create', {orgId: organization.id}) }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Connection
            </a>
            <a href="{{ path('superadmin_organizations_list') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Organizations
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card shadow-sm">
        <div class="card-body">
            {% if connections is empty %}
                <div class="text-center py-5">
                    <i class="fas fa-database fa-3x text-muted mb-3"></i>
                    <h4>No Database Connections</h4>
                    <p class="text-muted">
                        Add a database connection to enable breakout for this organization
                    </p>
                    <a href="{{ path('superadmin_connections_create', {orgId: organization.id}) }}" class="btn btn-primary mt-3">
                        <i class="fas fa-plus"></i> Add First Connection
                    </a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Connection Name</th>
                                <th>Driver</th>
                                <th>Host</th>
                                <th>Database</th>
                                <th>User</th>
                                <th>Default</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for conn in connections %}
                                <tr class="{% if not conn.isActive %}table-secondary{% endif %}">
                                    <td>
                                        <strong>{{ conn.connectionName }}</strong>
                                        {% if conn.isDefault %}
                                            <span class="badge bg-primary ms-2">
                                                <i class="fas fa-star"></i> Default
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if conn.dbDriver == 'pdo_mysql' %}
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-database"></i> MySQL
                                            </span>
                                        {% elseif conn.dbDriver == 'pdo_pgsql' %}
                                            <span class="badge bg-info">
                                                <i class="fas fa-database"></i> PostgreSQL
                                            </span>
                                        {% elseif conn.dbDriver == 'sqlsrv' %}
                                            <span class="badge bg-danger">
                                                <i class="fas fa-database"></i> SQL Server
                                            </span>
                                        {% else %}
                                            <span class="badge bg-secondary">{{ conn.dbDriver }}</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <code>{{ conn.dbHost }}{% if conn.dbPort %}:{{ conn.dbPort }}{% endif %}</code>
                                    </td>
                                    <td><code>{{ conn.dbName }}</code></td>
                                    <td><code>{{ conn.dbUser }}</code></td>
                                    <td>
                                        {% if conn.isDefault %}
                                            <i class="fas fa-check text-success"></i>
                                        {% else %}
                                            <i class="fas fa-minus text-muted"></i>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if conn.isActive %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Active
                                            </span>
                                        {% else %}
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Inactive
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            {{ conn.createdAt|date('Y-m-d H:i') }}
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button type="button"
                                                    class="btn btn-outline-info test-connection-btn"
                                                    data-connection-id="{{ conn.id }}"
                                                    title="Test Connection">
                                                <i class="fas fa-plug"></i>
                                            </button>
                                            <button type="button"
                                                    class="btn btn-outline-secondary toggle-connection-btn"
                                                    data-connection-id="{{ conn.id }}"
                                                    data-is-active="{{ conn.isActive ? '1' : '0' }}"
                                                    title="Toggle Active/Inactive">
                                                <i class="fas fa-power-off"></i>
                                            </button>
                                            <form method="post"
                                                  action="{{ path('superadmin_connections_delete', {id: conn.id}) }}"
                                                  style="display: inline;"
                                                  onsubmit="return confirm('Are you sure you want to delete this connection?');">
                                                <button type="submit"
                                                        class="btn btn-outline-danger"
                                                        title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted mb-0">
                        <i class="fas fa-info-circle"></i>
                        Total: <strong>{{ connections|length }}</strong> connection(s)
                    </p>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="mt-4">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-question-circle"></i> Database Connection Help</h5>
            </div>
            <div class="card-body">
                <p><strong>Connection Management:</strong></p>
                <ul>
                    <li><strong>Default Connection:</strong> The connection marked with <span class="badge bg-primary"><i class="fas fa-star"></i> Default</span> will be used for new dictionaries</li>
                    <li><strong>Driver Types:</strong>
                        <ul>
                            <li><span class="badge bg-warning text-dark">MySQL</span> - Compatible with classic CSWeb, good for small surveys</li>
                            <li><span class="badge bg-info">PostgreSQL</span> - Recommended for large census data, better performance</li>
                            <li><span class="badge bg-danger">SQL Server</span> - For Microsoft/government environments</li>
                        </ul>
                    </li>
                    <li><strong>Actions:</strong>
                        <ul>
                            <li><i class="fas fa-plug"></i> Test connection - Verify database connectivity</li>
                            <li><i class="fas fa-power-off"></i> Toggle - Enable/disable connection</li>
                            <li><i class="fas fa-trash"></i> Delete - Remove connection (cannot be undone)</li>
                        </ul>
                    </li>
                </ul>
                <div class="alert alert-info mt-3">
                    <i class="fas fa-info-circle"></i>
                    <strong>Remember:</strong> MySQL remains the primary database (imposed by CSPro) for metadata and BLOBs.
                    These connections are for breakout data only.
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast for test results -->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="testResultToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">Connection Test</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
        </div>
        <div class="toast-body" id="testResultMessage">
        </div>
    </div>
</div>

<style>
    .btn-group-sm > .btn,
    .btn-group-sm > form > .btn {
        padding: 0.25rem 0.5rem;
    }

    .table td {
        vertical-align: middle;
    }

    .badge {
        font-weight: 500;
    }

    code {
        background-color: #f5f5f5;
        padding: 2px 6px;
        border-radius: 3px;
        font-size: 0.9em;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Test connection
    document.querySelectorAll('.test-connection-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const connectionId = this.dataset.connectionId;
            const icon = this.querySelector('i');

            // Show loading
            icon.className = 'fas fa-spinner fa-spin';
            this.disabled = true;

            fetch(`{{ path('superadmin_connections_test', {id: '__ID__'}) }}`.replace('__ID__', connectionId), {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                // Reset button
                icon.className = 'fas fa-plug';
                this.disabled = false;

                // Show toast
                const toast = document.getElementById('testResultToast');
                const toastBody = document.getElementById('testResultMessage');
                const toastHeader = toast.querySelector('.toast-header');

                if (data.success) {
                    toastHeader.className = 'toast-header bg-success text-white';
                    toastBody.innerHTML = '<i class="fas fa-check-circle"></i> ' + data.message;
                } else {
                    toastHeader.className = 'toast-header bg-danger text-white';
                    toastBody.innerHTML = '<i class="fas fa-exclamation-circle"></i> ' + data.message;
                }

                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();
            })
            .catch(error => {
                icon.className = 'fas fa-plug';
                this.disabled = false;
                alert('Test failed: ' + error.message);
            });
        });
    });

    // Toggle connection
    document.querySelectorAll('.toggle-connection-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            const connectionId = this.dataset.connectionId;
            const isActive = this.dataset.isActive === '1';

            if (!confirm(`Are you sure you want to ${isActive ? 'deactivate' : 'activate'} this connection?`)) {
                return;
            }

            const icon = this.querySelector('i');
            icon.className = 'fas fa-spinner fa-spin';
            this.disabled = true;

            fetch(`{{ path('superadmin_connections_toggle', {id: '__ID__'}) }}`.replace('__ID__', connectionId), {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    location.reload();
                } else {
                    alert('Toggle failed: ' + data.message);
                    icon.className = 'fas fa-power-off';
                    this.disabled = false;
                }
            })
            .catch(error => {
                alert('Toggle failed: ' + error.message);
                icon.className = 'fas fa-power-off';
                this.disabled = false;
            });
        });
    });
});
</script>
{% endblock %}
