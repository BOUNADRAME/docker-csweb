{% extends 'base.html.twig' %}

{% block title %}Organizations - CSWeb Multi-Tenant Admin{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>
                <i class="fas fa-building"></i> Organizations
            </h2>
            <p class="text-muted">Manage all organizations in the multi-tenant system</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{{ path('superadmin_organizations_create') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create Organization
            </a>
            <a href="{{ path('superadmin_dashboard') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card shadow-sm">
        <div class="card-body">
            {% if organizations is empty %}
                <div class="text-center py-5">
                    <i class="fas fa-building fa-3x text-muted mb-3"></i>
                    <h4>No Organizations Yet</h4>
                    <p class="text-muted">Create your first organization to get started with multi-tenant CSWeb</p>
                    <a href="{{ path('superadmin_organizations_create') }}" class="btn btn-primary mt-3">
                        <i class="fas fa-plus"></i> Create First Organization
                    </a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Country</th>
                                <th>Contact Email</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for org in organizations %}
                                <tr>
                                    <td>
                                        <strong>{{ org.organizationCode }}</strong>
                                    </td>
                                    <td>{{ org.organizationName }}</td>
                                    <td>
                                        <span class="badge bg-info">
                                            {{ org.organizationType|default('N/A') }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if org.countryCode %}
                                            <span class="badge bg-secondary">{{ org.countryCode }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if org.contactEmail %}
                                            <a href="mailto:{{ org.contactEmail }}">{{ org.contactEmail }}</a>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if org.isActive %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Active
                                            </span>
                                        {% else %}
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Inactive
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            {{ org.createdAt|date('Y-m-d H:i') }}
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{ path('superadmin_organization_connections', {id: org.id}) }}"
                                               class="btn btn-outline-primary"
                                               title="Manage Connections">
                                                <i class="fas fa-database"></i>
                                            </a>
                                            <a href="{{ path('superadmin_organizations_edit', {id: org.id}) }}"
                                               class="btn btn-outline-secondary"
                                               title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted mb-0">
                        <i class="fas fa-info-circle"></i>
                        Total: <strong>{{ organizations|length }}</strong> organization(s)
                    </p>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="mt-4">
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-question-circle"></i> Quick Help</h5>
            </div>
            <div class="card-body">
                <p><strong>Organization Management:</strong></p>
                <ul>
                    <li><strong>Code:</strong> Unique identifier for the organization (e.g., ANSD, INS_BENIN)</li>
                    <li><strong>Type:</strong> Category of organization (statistics_office, research_institute, government_agency, ngo)</li>
                    <li><strong>Connections:</strong> Click the <i class="fas fa-database"></i> icon to manage database connections for each organization</li>
                    <li><strong>Status:</strong> Active organizations can use the system, inactive organizations are suspended</li>
                </ul>
                <p class="mb-0">
                    <a href="{{ path('superadmin_dashboard') }}">‚Üê Back to Dashboard</a>
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
    }

    .table td {
        vertical-align: middle;
    }

    .badge {
        font-weight: 500;
    }
</style>
{% endblock %}
