{% extends 'base.html.twig' %}

{% block title %}Administration Multi-Tenant{% endblock %}

{% block content %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">
                <i class="fas fa-tachometer-alt"></i> Administration Multi-Tenant
            </h1>
        </div>
    </div>

    <!-- Statistiques -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h3 class="text-primary">{{ stats.total_organizations }}</h3>
                    <p class="mb-0">Organisations Total</p>
                    <small class="text-muted">{{ stats.active_organizations }} actives</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h3 class="text-success">{{ stats.total_connections }}</h3>
                    <p class="mb-0">Connexions BD</p>
                    <small class="text-muted">{{ stats.active_connections }} actives</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <h3 class="text-info">
                        <i class="fas fa-database"></i>
                    </h3>
                    <p class="mb-0">Multi-SGBD</p>
                    <small class="text-muted">MySQL, PostgreSQL, SQL Server</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h3 class="text-warning">
                        <i class="fas fa-shield-alt"></i>
                    </h3>
                    <p class="mb-0">Isolation Totale</p>
                    <small class="text-muted">Par organisation</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions rapides -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <i class="fas fa-bolt"></i> Actions Rapides
                </div>
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a href="{{ path('superadmin_organizations_create') }}" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Nouvelle Organisation
                        </a>
                        <a href="{{ path('superadmin_organizations_list') }}" class="btn btn-secondary">
                            <i class="fas fa-list"></i> Gérer les Organisations
                        </a>
                        <a href="{{ path('mt_breakout_dashboard') }}" class="btn btn-success">
                            <i class="fas fa-database"></i> Breakout & Cron Jobs
                        </a>
                        <a href="#" class="btn btn-info" onclick="showMigrationTool()">
                            <i class="fas fa-sync"></i> Migration de Données
                        </a>
                        <a href="#" class="btn btn-warning" onclick="showSystemStatus()">
                            <i class="fas fa-heartbeat"></i> Statut Système
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Liste des organisations récentes -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-building"></i> Organisations (Dernières {{ organizations|length }})
                </div>
                <div class="card-body">
                    {% if organizations|length > 0 %}
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Code</th>
                                    <th>Nom</th>
                                    <th>Type</th>
                                    <th>Pays</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for org in organizations %}
                                <tr>
                                    <td><strong>{{ org.organizationCode }}</strong></td>
                                    <td>{{ org.organizationName }}</td>
                                    <td>
                                        <span class="badge badge-secondary">{{ org.organizationType|default('N/A') }}</span>
                                    </td>
                                    <td>{{ org.countryCode|default('-') }}</td>
                                    <td>
                                        {% if org.isActive %}
                                            <span class="badge badge-success">Active</span>
                                        {% else %}
                                            <span class="badge badge-danger">Inactive</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('superadmin_organizations_edit', {id: org.id}) }}" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="{{ path('superadmin_organization_connections', {id: org.id}) }}" class="btn btn-sm btn-info">
                                            <i class="fas fa-database"></i> Connexions
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <a href="{{ path('superadmin_organizations_list') }}" class="btn btn-link">Voir toutes les organisations →</a>
                    {% else %}
                        <div class="alert alert-info">
                            Aucune organisation configurée.
                            <a href="{{ path('superadmin_organizations_create') }}" class="alert-link">Créer la première organisation</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function showMigrationTool() {
    alert('Outil de migration à venir...');
}

function showSystemStatus() {
    alert('Statut système à venir...');
}
</script>
{% endblock %}
